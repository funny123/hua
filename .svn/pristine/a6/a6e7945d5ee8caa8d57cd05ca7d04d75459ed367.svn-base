	<script type="text/javascript">
		var slide = new auiSlide({
			container : document.getElementById("aui-slide"),
			// "width":300,
			"height" : 260,
			"speed" : 300,
			"pageShow" : true,
			"pageStyle" : 'dot',
			"loop" : true,
			'dotPosition' : 'center',
			currentPage : currentFun
		})
		function currentFun(index) {
			console.log(index);
		}
	</script>
	<script type="text/javascript">
		apiready = function() {
			//调用数据
			api.ajax({
				url : 'http://sh.0713mhw.com/index.php/Api/Index/getShopInfo',
				method : 'post',
				data : {
					values : {
						uuid : api.deviceId
					}
				}
			}, function(ret, err) {
				if (ret) {
//					api.alert({
//						msg : JSON.stringify(ret)
//					});
					for (var i = 0; i <= ret.length - 1; i++) {
						var html = '<li class="aui-list-item">';
						html = html + '<div class="aui-media-list-item-inner">';
						html = html + '<div class="aui-list-item-media">';
						html = html + '<img src= "http://sh.0713mhw.com/attachs/2016/11/07/thumb_582022f732190.jpg">';
						html = html + '</div>';
						html = html + '<div class="aui-list-item-inner">';
						html = html + '<div class="aui-list-item-text">';
						html = html + '<div class="aui-list-item-title">';
						html = html + ret[i].shop_name;
						html = html + '</div>';
						//						html = html + '<div class="aui-list-item-right">08:00</div>';
						html = html + '</div>';
						html = html + '<div class="aui-list-item-text">在下方我们加入了aui-info信息条</div>';
						html = html + '</div>';
						html = html + '</div>';
						html = html + '<div class="aui-info" style="padding-top:0">';
						html = html + '<div class="aui-info-item">';
						html = html + '<img src="" style="width:1rem" class="aui-img-round" /><span class="aui-margin-l-5">流浪男</span>';
						html = html + '</div>';
						html = html + '<div class="aui-info-item">';
						html = html + '2015-07-14 10:31';
						html = html + '</div>';
						html = html + '</div>';
						html = html + '</li>';
						$api.append($api.byId('list'), html);
					}
				} else {
					api.alert({
						msg : JSON.stringify(err)
					});
				}
			});
		};
